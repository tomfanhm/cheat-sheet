---
import Card from "./Card.astro";

export interface Props {
  heading: string;
  paragraph: string;
  data: {
    id: string;
    title: string;
    href: string;
    description: string;
    imageUrl: ImageMetadata;
    date: string;
    datetime: string;
  }[];
}

const { heading, paragraph, data } = Astro.props;
---

<div class="bg-background py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl">
        {heading}
      </h2>
      <p class="mt-2 text-lg leading-8 text-foreground/70">{paragraph}</p>
    </div>
    <div
      class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-border pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3"
    >
      {data.map((doc) => <Card {...doc} />)}
    </div>
  </div>
</div>
