---
import { generateLinkedContentList, getContentNavigation } from "@/lib/utils";
import { getCollection, type CollectionEntry } from "astro:content";
import ContentLayout from "../../layouts/ContentLayout.astro";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const docs = await getCollection("blog");
  return docs.map((doc) => ({
    params: { slug: doc.slug },
    props: doc,
  }));
}

type Props = CollectionEntry<"blog">;

const doc = Astro.props;
const docs = await getCollection("blog");
const content = generateLinkedContentList(docs, "/blog/");
const { previous, next } = getContentNavigation(content, doc.slug);

const data = {
  ...doc.data,
  previous,
  next,
};
const { Content } = await doc.render();
---

<Layout title={doc.data.title} description={doc.data.description}>
  <ContentLayout {...data}>
    <Content />
  </ContentLayout>
</Layout>
