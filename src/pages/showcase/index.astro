---
import { getCollection } from "astro:content";
import Showcase from "../../components/Showcase.astro";
import Layout from "../../layouts/Layout.astro";
import { generateLinkedContentList } from "../../lib/utils";

const heading = "Showcase";
const paragraph =
  "With this curated selection, see how these resources can be applied in different coding scenarios, enhancing productivity and code quality.";

const docs = await getCollection("showcase");

const data = generateLinkedContentList(docs, "/showcase/");
---

<Layout title={heading} description={paragraph}>
  <Showcase heading={heading} paragraph={paragraph} data={data} />
</Layout>
