---
import { getCollection } from "astro:content";
import Showcase from "../../components/Showcase.astro";
import Layout from "../../layouts/Layout.astro";
import { generateLinkedContentList } from "../../lib/utils";

const heading = "Documentation";
const paragraph =
  "Make your learning and debugging easier with our well-organised, easy-to-understand guides.";

const docs = await getCollection("documentation");

const data = generateLinkedContentList(docs, "/documentation/");
---

<Layout title={heading} description={paragraph}>
  <Showcase heading={heading} paragraph={paragraph} data={data} />
</Layout>
